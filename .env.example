SECRET_KEY=change-me
SETTINGS_ENCRYPTION_KEY=change-me
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1
# If you serve the UI on another host/port (e.g. LAN IP, Docker port 5428),
# add it here. When DEBUG=True and CSRF_TRUSTED_ORIGINS is empty, the backend
# auto-trusts common dev origins for hosts listed in ALLOWED_HOSTS.
CSRF_TRUSTED_ORIGINS=
CORS_ALLOWED_ORIGINS=http://localhost:5428,http://localhost:5173

POSTGRES_DB=alarm_db
POSTGRES_USER=alarm
POSTGRES_PASSWORD=alarm
DATABASE_URL=postgresql://alarm:alarm@localhost:5432/alarm_db
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}

# Home Assistant
HA_URL=http://homeassistant.local:8123
HA_TOKEN=
HA_WEBHOOK_ID=
HA_DEFAULT_NOTIFY_SERVICE=notify.notify

# MQTT
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=

# Email / notifications
EMAIL_HOST=
EMAIL_PORT=
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=True
